<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/cameraFragment">
    <fragment
        android:id="@+id/tempFragment"
        android:name="dev.moataz.photoweather.temp.TempFragment"
        android:label="fragment_temp"
        tools:layout="@layout/fragment_temp" />
    <fragment
        android:id="@+id/cameraFragment"
        android:name="dev.moataz.photoweather.camera.CameraFragment"
        android:label="camera_fragment"
        tools:layout="@layout/camera_fragment" >
        <action
            android:id="@+id/action_cameraFragment_to_previewFragment"
            app:destination="@id/previewFragment" />
    </fragment>
    <fragment
        android:id="@+id/previewFragment"
        android:name="dev.moataz.photoweather.camera.PreviewFragment"
        android:label="preview_fragment"
        tools:layout="@layout/preview_fragment" />
</navigation>